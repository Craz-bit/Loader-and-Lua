-- Realistic Loader + Execute External Script

local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local HttpService = game:GetService("HttpService")

-- GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "RealisticLoader"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 360, 0, 110)
frame.Position = UDim2.new(0.5, -180, 0, 50)
frame.BackgroundColor3 = Color3.fromRGB(25,25,25)
frame.BackgroundTransparency = 1
frame.BorderSizePixel = 0

local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 25)

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -20, 0, 28)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.Text = "Loading Script..."
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextXAlignment = Enum.TextXAlignment.Left
title.TextTransparency = 1

-- Progress bar background
local barBG = Instance.new("Frame", frame)
barBG.Size = UDim2.new(1, -20, 0, 22)
barBG.Position = UDim2.new(0, 10, 0, 50)
barBG.BackgroundColor3 = Color3.fromRGB(45,45,45)
barBG.BackgroundTransparency = 1
barBG.BorderSizePixel = 0

local barBGCorner = Instance.new("UICorner", barBG)
barBGCorner.CornerRadius = UDim.new(1,0)

-- Progress bar
local bar = Instance.new("Frame", barBG)
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(0,170,255)
bar.BorderSizePixel = 0

local barCorner = Instance.new("UICorner", bar)
barCorner.CornerRadius = UDim.new(1,0)

-- Gradient for realistic effect
local gradient = Instance.new("UIGradient", bar)
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(0,170,255)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0,210,255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0,170,255))
}
gradient.Rotation = 90

-- Footer
local yt = Instance.new("TextLabel", frame)
yt.Size = UDim2.new(1, -20, 0, 20)
yt.Position = UDim2.new(0, 10, 0, 80)
yt.BackgroundTransparency = 1
yt.Text = "YouTube: aikiscript"
yt.TextColor3 = Color3.fromRGB(150,150,150)
yt.Font = Enum.Font.Gotham
yt.TextSize = 12
yt.TextTransparency = 1
yt.TextXAlignment = Enum.TextXAlignment.Left

-- Fade In
TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()
TweenService:Create(title, TweenInfo.new(0.5), {TextTransparency = 0}):Play()
TweenService:Create(barBG, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()
TweenService:Create(yt, TweenInfo.new(0.5), {TextTransparency = 0}):Play()

-- Smooth Loading (30s)
local duration = 30
local startTime = tick()

local connection
connection = RunService.RenderStepped:Connect(function()
	local elapsed = tick() - startTime
	local progress = math.clamp(elapsed / duration, 0, 1)
	bar.Size = UDim2.new(progress, 0, 1, 0)
	if progress >= 1 then
		connection:Disconnect()
	end
end)

wait(duration)

bar.Size = UDim2.new(1, 0, 1, 0)

-- Fade Out
TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
TweenService:Create(title, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
TweenService:Create(barBG, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
TweenService:Create(yt, TweenInfo.new(0.5), {TextTransparency = 1}):Play()

wait(0.6)
gui:Destroy()

-- Execute external script
local success, err = pcall(function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/Craz-bit/Loader-and-Lua/refs/heads/main/AdmLua"))()
end)

if not success then
	warn("Failed to execute script:", err)
end
